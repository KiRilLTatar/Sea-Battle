<Window x:Class="SeaBattle2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattle2._0"
        mc:Ignorable="d"
        Title="SeaBattle" 
        Height="500" 
        Width="800"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="./Image/bgdark.png"/>
    </Window.Background>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
            Fill="#0B2242"/>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
            <TextBlock Text="Sea Battle"
                       FontSize="32"
                       Foreground="Aqua"
                       FontFamily="Fonts/#IrishGrover"
                       Margin="0 10 0 0"/>

            <TextBlock Text="{Binding ScorePlayer}"
                       d:Text="Player: 0"
                       FontSize="24"
                       Foreground="AntiqueWhite"
                       Margin="0 40 0 0"/>
            <TextBlock Text="{Binding ElementScore}"
                       d:Text="Computer: 0"
                       FontSize="24"
                       Foreground="AntiqueWhite"/>

            <Button Content="Старт"
                    Command="{Binding StartCommand}"
                    Margin="0 200 0 0"
                    Foreground="White"
                    FontSize="30">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#111e43"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#233c89" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                </Button.Style>


                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" 
                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

            <Button Content="Стоп"
                Command="{Binding StopCommand}"
                Margin="0 20 0 0"
                Foreground="White"
                FontSize="30">  

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#111e43"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#233c89" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                </Button.Style>


                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
        </StackPanel>

        <ItemsControl Grid.Column="1" Grid.Row="1" ItemsSource="{Binding PlayerCells.Cells}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ItemsControl ItemsSource="{Binding}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="White" Background="#0AAA"
                                        Width="30" Height="30" MouseLeftButtonDown="MouseKeyDownPlayer">

                                    <Ellipse Fill="Red" Visibility="{Binding PlayerCells.CellsVM.Visabile}" Width="8" Height="8"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl Grid.Column="2" Grid.Row="1" ItemsSource="{Binding EnemyCells.Cells}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ItemsControl ItemsSource="{Binding}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="White" Background="#0AAA"
                                Width="30" Height="30" MouseLeftButtonDown="MouseKeyDownEnemy"></Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="AntiqueWhite"
                       Margin="0 0 0 0"
                       d:Text="00:00"
                       Text="{Binding Timer}">
        </TextBlock>
    </Grid>
</Window>
